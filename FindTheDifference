/**
 * 389. Find the Difference
 * Given two strings s and t which consist of only lowercase letters.

String t is generated by random shuffling string s and then add one more letter at a random position.

Find the letter that was added in t.

Example:

Input:
s = "abcd"
t = "abcde"

Output:
e

Explanation:
'e' is the letter that was added.
 */

package hashing;

import java.util.HashMap;

public class FindTheDifference {
	
	public static char findDiff(String s, String t)
	{
		HashMap<Character, Integer> hmap = new HashMap<>();
		char c= '\0';
		//Put the contents of String s in the HashMap
		for(char n: s.toCharArray())
		{
			hmap.put(n, 0);
		}
		//Check if the HashMap has the contents of String t
		//return the character which is not present in s
		for(char n: t.toCharArray())
		{
			if(!hmap.containsKey(n))
			{
				return n;
			}
		}
		return c;
	
	}
	public static void main(String[] args)
	{
		String s = "abcd";
		
		String t = "abcde";
		System.out.println(findDiff(s,t));
		
		String u = "hello";
		String v = "hellIo";
		System.out.println(findDiff(u,v));
	}

}
